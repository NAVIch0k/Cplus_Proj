#include <iostream>
#include <ctime>
using namespace std;

void play() {
    srand(time(NULL));
    cout << 123;
}

int set_hp() {
    cout << "Введите кол-во жизней от 1 до 5: ";
    int hp;
    while (hp<1||hp>5)
    {
    cin >> hp;
    }
    return hp;
}

int set_question() {
    cout << "Введите кол-во вопросов(5,10,15): ";
    int question;
    while (question!=5||question!=10||question!=15)
    {
        cin >> question;
    }
    return question;
}

int main()
{
    setlocale(0, "");
    bool game = true;
    while (game)
    {
        int hp;
        int question;
        cout << "Меню\n1.Начать викторину\n2.Настройки\n3.Выход\n";
        int choose;
        cin >> choose;
        switch (choose)
        {
        case 1: {
            play();
            game = false;
            break;
        }
        case 2: {
            int stop = 0;
            while (stop!=4)
            {
                system("cls");
                cout << "1.Кол-во жизней\n2.Время(в минутах)\n3.Кол-во вопросов\n4.Выход";
                cin >> choose;
                switch (choose)
                {
                case 1: {
                    hp = set_hp();;
                }
                case 2: {

                    break;
                }
                case 3: {
                    question = set_question();
                }
                case 4: {
                    stop = 4;
                    break;
                }
                default:
                    break;
                }
                break;
            }
        }
        case 3: {
            system("cls");
            game = false;
            break;
        }
        default:
            system("cls");
            break;
        }
    }
}
